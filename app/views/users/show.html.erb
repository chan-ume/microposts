<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            
            <%= gravatar_for @user %>
            <h1>
                <%= @user.name %>
            </h1>
            <p>アドレス: <%= @user.email %></p>
            <p>地域: <%= @user.country %></p>
            
            <div class="row">
            <aside class="col-xs-6">
            <h1>フォロー</h1>
            <% @following_users.each do |following_user| %>
            <li>
                    <%= link_to gravatar_for(following_user, size: 50), following_user %>
                    <span class="user"><%= link_to following_user.name, following_user %></span>
            </li></br></br>  
            <% end %>
            </aside>
            <aside class="col-xs-6">
            <h1>フォロワー</h1>
            <% @following_users.each do |following_user| %>
            <li>
                    <%= link_to gravatar_for(following_user, size: 50), following_user %>
                    <span class="user"><%= link_to following_user.name, following_user %></span>
            </li></br></br>  
            <% end %>
            </aside>
            </div>
        </section>
  </aside>
  <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
      <% if @user.microposts.any? %>
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
              <% @microposts.each do |micropost| %>
                  <%= render partial: 'microposts/micropost', locals: { micropost: micropost } %>
              <% end %>
          </ol>
      <% end %>
  </div>
</div>