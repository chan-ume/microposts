<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            
            <%= gravatar_for @user %>
            <h1>
                <%= @user.name %>
            </h1>
            <p>アドレス: <%= @user.email %></p>
            <p>地域: <%= @user.country %></p>
            
            <div class="row">
            <aside class="col-xs-6">
                <h1>フォロー</h1>
                <%= link_to @user.following_users.count, following_user_path %>
            </aside>
            <aside class="col-xs-6">
                <h1>フォロワー</h1>
                <%= link_to @user.followed_users.count, followed_user_path %>
            </aside>
            </div>
        </section>
  </aside>
  <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
      <% if @user.microposts.any? %>
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
              <% @microposts.each do |micropost| %>
                  <%= render partial: 'microposts/micropost', locals: { micropost: micropost } %>
              <% end %>
          </ol>
      <% end %>
  </div>
</div>