<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
           <p class="float:left"><%= gravatar_for @user %></p>
            <h1><%= @user.name %></h1>
            <div>フォロー  <%= link_to @user.following_users.count, following_user_path %></div>
            <div>フォロワー <%= link_to @user.followed_users.count, followed_user_path %></div>
            <br clear="all">
            
            <p>アドレス: <%= @user.email %></p>
            <p>地域: <%= @user.country %></p>
            
         </section>
  </aside>
  <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
      <% if @user.microposts.any? %>
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
              <% @microposts.each do |micropost| %>
                  <%= render partial: 'microposts/micropost', locals: { micropost: micropost } %>
              <% end %>
          </ol>
      <% end %>
  </div>
</div>